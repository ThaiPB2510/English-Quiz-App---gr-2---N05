<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thitracnghiemmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LuyenThiActivity">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pink"
        android:gravity="center"
        android:text="CHỌN MỨC ĐỘ"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/nangcaobtn"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="NÂNG CAO"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#6590D0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.664" />

    <Button
        android:id="@+id/trungcapbtn"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="TRUNG CẤP"
        android:textColor="@color/white"
        android:backgroundTint="#68D773"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.438" />

    <Button
        android:id="@+id/cobanbtn"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="CƠ BẢN"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:backgroundTint="#5BCECE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202" />

</android.support.constraint.ConstraintLayout>